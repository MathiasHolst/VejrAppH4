<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VejrApp.MainPage">
    <ScrollView>
        <StackLayout BackgroundColor="SkyBlue">
            <Frame BackgroundColor="Gray" Padding="24" CornerRadius="0">
                <Label Text="Weather" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Entry x:Name="cityName" Placeholder="Search" HorizontalTextAlignment="Center" PlaceholderColor="Chocolate" Margin="30,0,30,0" VerticalOptions="EndAndExpand"/>
            <Button x:Name="searchBtn" Text="Search" Clicked="SearchCity" Margin="30,0,30,0"></Button>
            <Button x:Name="test" Text="Get_orientation" Clicked="CheckForOrientation" Margin="30,0,30,0" VerticalOptions="EndAndExpand"></Button>
            <Button x:Name="locationBtn" Text="My location" Clicked="Change_page" Margin="30,0,30,40"></Button>
        </StackLayout>
    </ScrollView>

</ContentPage>
