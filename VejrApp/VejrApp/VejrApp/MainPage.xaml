<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VejrApp.MainPage">

    <StackLayout BackgroundColor="SkyBlue">
        <Frame BackgroundColor="Gray" Padding="24" CornerRadius="0">
            <Label Text="Weather" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry Placeholder="New York" PlaceholderColor="DarkGray"/>
        <Button Text="Search" Margin="0,0,0,50"></Button>
        <Button Text="My location" Clicked="OnClick"></Button>
        <Button Text="Berlin"></Button>
        <Button Text="Madrid"></Button>
        <Button Text="London"></Button>
        <Button Text="Rome"></Button>
        
    </StackLayout>

</ContentPage>
