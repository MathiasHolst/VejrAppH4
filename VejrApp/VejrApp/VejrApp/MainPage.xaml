<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VejrApp.MainPage">

    <StackLayout BackgroundColor="SkyBlue" Orientation="Vertical" x:Name="outerStack">
        <Frame BackgroundColor="Gray" Padding="24" CornerRadius="0">
            <Label Text="Weather" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <StackLayout x:Name="OriButton" Orientation="Vertical">
            <Entry x:Name="cityName" Placeholder="Search" HorizontalTextAlignment="Center" PlaceholderColor="Chocolate" Margin="30,180,30,0" VerticalOptions="CenterAndExpand"/>
            <Button x:Name="searchBtn" Text="Search" Clicked="SearchCity" Margin="30,0,30,140"></Button>
            <Button x:Name="test" Text="Get_orientation" Clicked="Get_Orientation" Margin="30,0,30,0"></Button>
            <Button x:Name="locationBtn" Text="My location" Clicked="Change_page" Margin="30,0,30,30"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>
